model Restaurant {
  id              Int           @id @default(autoincrement())
  name            String
  address         String
  category        FoodType      @relation(fields: [category_id], references: [id])
  category_id     Int
  budget          BudgetCategory
  website_link    String
  created_at      DateTime      @default(now()) @map("created_at")

  Favourite       Favourite[]

  @@map("restaurants")
}

enum BudgetCategory {
  CHEAP
  STANDARD
  EXPENSIVE
}